{
  "compilerOptions": {
    "strict": true,                 // Sets 'noImplicitThis', which gives richer Vue types
    "experimentalDecorators": true, // Required for vue-class-component
    "allowUmdGlobalAccess": true,   // Needed to allow Vue UMD access without compiler warnings
    "target": "es2020",             // For later targets, set useDefineForClassFields to false
    "module": "es2020",
    "moduleResolution": "node",
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "wwwroot"
  ]
}
