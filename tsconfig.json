{
  "compilerOptions": {
    "strict": true,
    "noImplicitReturns": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "target": "es2020",
    "module": "es2015",
    "moduleResolution": "node",
    "allowUmdGlobalAccess": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "wwwroot"
  ]
}
